# API Configuration (Removed - now using Supabase directly)
# NEXT_PUBLIC_API_URL - No longer needed, using Supabase
NEXT_PUBLIC_API_VERSION=v1

# Supabase Configuration (Required)
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Company Configuration
# Set this to your company ID in the backend database
NEXT_PUBLIC_COMPANY_ID=1

# App Configuration
NEXT_PUBLIC_APP_NAME="Geer Guardian"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Firebase Push Notifications
# Get VAPID key from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_here