# API Configuration (Guardian Public API)
NEXT_PUBLIC_API_URL=http://100.109.133.12:3000
NEXT_PUBLIC_API_VERSION=v1

# Polling Configuration (for realtime updates)
NEXT_PUBLIC_POLLING_INTERVAL=30000

# Company Configuration (Required for multi-tenant setup)
NEXT_PUBLIC_COMPANY_ID=1

# Application Configuration
NEXT_PUBLIC_APP_NAME="Geer Guardian"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# Push Notifications Configuration
# When NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true, the app will:
# - Request FCM/APNS device token from browser/mobile device
# - Send deviceToken to backend during login (stored in Guardian.deviceTokens[])
# - Receive real-time push notifications for attendance, announcements, emergencies
# Note: deviceToken field is optional and backward compatible

