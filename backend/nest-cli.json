{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": false,
    "deleteOutDir": false,
    "assets": [
      {
        "include": "shared/reference/**/*",
        "outDir": "dist"
      },
      {
        "include": "modules/communication/email-approval/templates/**/*",
        "outDir": "dist"
      },
      {
        "include": "views/**/*",
        "outDir": "dist"
      },
      {
        "include": "types/**/*",
        "outDir": "dist"
      }
    ]
  }
}
