<div class="code-example">
    <h4>{{title}}</h4>

    {{#with (parseJson languages) as |langs|}}
    <div class="tabs">
        {{#each langs}}
        <button class="tab {{#if @first}}active{{/if}}" data-tab-group="{{../../id}}" data-tab="{{../../id}}-{{this.id}}">
            {{this.name}}
        </button>
        {{/each}}
    </div>

    {{#each langs}}
    <div id="{{../../id}}-{{this.id}}" class="tab-content {{#if @first}}active{{/if}}" data-tab-group="{{../../id}}">
        <div style="position: relative;">
            <button class="copy-btn" style="position: absolute; top: 10px; right: 10px; padding: 5px 10px; background: var(--primary-color); color: white; border: none; border-radius: 4px; cursor: pointer;">
                Copy
            </button>
            <pre><code class="code-block" data-language="{{this.id}}" data-code="{{cleanCode this.code}}"></code></pre>
        </div>
    </div>
    {{/each}}
    {{/with}}
</div>