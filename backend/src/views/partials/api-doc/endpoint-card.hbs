<div class="endpoint">
    <div class="endpoint-header">
        <span class="method method-{{toLowerCase method}}">{{method}}</span>
        <span class="endpoint-path">{{path}}</span>
    </div>
    <div class="endpoint-description">{{description}}</div>

    {{#if parameters}}
    <div class="parameters">
        <h4>Parameters</h4>
        {{#each parameters}}
        <div class="param">
            <div>
                <span class="param-name">{{name}}</span>
                {{#if required}}<span class="param-required">*</span>{{/if}}
            </div>
            <div class="param-description">{{description}}</div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{#if requestBody}}
    <div class="request-section">
        <h4>Request Body</h4>
        <div class="json-block" data-json='{{json requestBody}}'></div>
    </div>
    {{/if}}

    {{#if responseExample}}
    <div class="response-section">
        <h4>Response Example</h4>
        <div class="json-block" data-json='{{json responseExample}}'></div>
    </div>
    {{/if}}
</div>