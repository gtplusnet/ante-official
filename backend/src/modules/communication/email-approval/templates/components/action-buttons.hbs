<!-- Action Buttons Component -->
<div style="text-align: center; margin: 40px 0;">
    <div style="display: inline-block;">
        {{#each approval.actions}}
        <a href="{{url}}" 
           style="{{style}} margin: 0 10px 10px 0; display: inline-block; text-decoration: none; border-radius: 6px; font-size: 16px; font-weight: 600; transition: all 0.2s ease;">
            {{label}}
        </a>
        {{/each}}
    </div>
</div>