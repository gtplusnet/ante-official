# Server Configuration
NODE_ENV=development
PORT=3000
# Note: Socket.IO runs on the same port as the HTTP server (PORT)

# Database Configuration
# Local Development (Supabase in Docker)
DATABASE_URL=postgresql://postgres:your-super-secret-and-long-postgres-password@localhost:5432/postgres?schema=public
DIRECT_URL=postgresql://postgres:your-super-secret-and-long-postgres-password@localhost:5432/postgres?schema=public

# Staging (Self-hosted Supabase)
# DATABASE_URL=postgresql://postgres.tenant1:90xKO8hV9z7hgzr35fvPMbaNaEZCjU0d@157.230.246.107:6543/postgres?pgbouncer=true&schema=public
# DIRECT_URL=postgresql://postgres.tenant1:90xKO8hV9z7hgzr35fvPMbaNaEZCjU0d@157.230.246.107:5433/postgres?schema=public

# Production (Self-hosted Supabase)
# DATABASE_URL=postgresql://postgres.tenant1:production_password@178.128.49.38:6543/postgres?pgbouncer=true&schema=public
# DIRECT_URL=postgresql://postgres.tenant1:production_password@178.128.49.38:5433/postgres?schema=public

# For MongoDB if used
MONGODB_URI=mongodb://localhost:27017/ante

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:9000
ALLOWED_ORIGINS=http://localhost:9000,http://localhost:3001

# AWS Configuration (if using S3 for uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=your-region
AWS_S3_BUCKET=your-bucket-name

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@example.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false  # Set to 'true' for managed Redis/Valkey with SSL/TLS (rediss://)

# Redis Auth Caching Configuration
REDIS_AUTH_TTL=86400

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# API Keys for External Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_GEMINI_API_KEY=your-gemini-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=false
ENABLE_TRACING=false
ENABLE_MIDDLEWARE_BENCHMARK=false

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=ante-backend
NEW_RELIC_LOG_LEVEL=info