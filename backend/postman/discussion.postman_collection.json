{
  "info": {
    "_postman_id": "discussion-api-collection",
    "name": "discussion api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "table (list discussions)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"page\": 1,\n  \"perPage\": 10\n}"
        },
        "url": {
          "raw": "{{base_url}}/discussion/table",
          "host": ["{{base_url}}"],
          "path": ["discussion", "table"]
        }
      }
    },
    {
      "name": "get info (single discussion)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/discussion/:id",
          "host": ["{{base_url}}"],
          "path": ["discussion", ":id"]
        }
      }
    },
    {
      "name": "create discussion message",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"discussionId\": \"{{$randomUUID}}\",\n  \"title\": \"sample discussion\",\n  \"module\": \"project\",\n  \"targetId\": \"{{$randomUUID}}\",\n  \"messageId\": \"{{$randomUUID}}\",\n  \"activity\": \"comment\",\n  \"content\": \"this is a test message.\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/discussion/message",
          "host": ["{{base_url}}"],
          "path": ["discussion", "message"]
        }
      }
    },
    {
      "name": "edit discussion message",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"updated message content\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/discussion/message/:id",
          "host": ["{{base_url}}"],
          "path": ["discussion", "message", ":id"]
        }
      }
    },
    {
      "name": "delete discussion message",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/discussion/message/:id",
          "host": ["{{base_url}}"],
          "path": ["discussion", "message", ":id"]
        }
      }
    },
    {
      "name": "get messages (discussion chat)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/discussion/messages?discussionId={{$randomUUID}}&limit=10",
          "host": ["{{base_url}}"],
          "path": ["discussion", "messages"],
          "query": [
            { "key": "discussionId", "value": "{{$randomUUID}}" },
            { "key": "limit", "value": "10" },
            { "key": "beforeId", "value": "" }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ]
} 